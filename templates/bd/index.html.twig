{% extends 'base.html.twig' %}

{% block title %}La liste des auteurs{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="myFont text-center mt-3 text-danger display-3">BD</h1>
        <h2 class="myFont text-danger">La liste des auteurs</h2>
        <ul class="list-group list-group-flush">
            {% for auteur in auteurs %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a class="fontSize" href="{{ path('bd_show',{'id': auteur.id }) }}" >{{ auteur.auteur }}</a>
                    <span class="badge badge-danger badge-pill fontSize">{{ auteur.produits|length }}</span>
                </li>        
            {% endfor %}
        </ul>

        <div class="navigaton fontSize">
            {{ knp_pagination_render(auteurs) }}
        </div>    
    </div>

{% endblock %}
